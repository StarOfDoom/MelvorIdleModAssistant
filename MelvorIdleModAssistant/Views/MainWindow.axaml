      </StackPanel>
      <StackPanel Grid.Column="0"
               Grid.Row="1"
               VerticalAlignment="Center">
        <TextBlock FontSize="14"
                   HorizontalAlignment="Center"
                   Text="Game Version">
        </TextBlock>
        <TextBlock FontSize="14"
                   HorizontalAlignment="Center"
                   Text="{Binding GameVersion}">
        </TextBlock>
      </StackPanel>
    </Grid>
    <!-- End of Top Left Panel -->

    <!-- Start of Top Right Panel -->
    <rxui:RoutedViewHost Grid.Column="1"
                         Grid.Row="0"
                         Router="{Binding Router}"/>
    <!-- End of Top Right Panel -->

    <!-- Start of Bottom Left Panel -->
    <StackPanel Grid.Column="0"
                Grid.Row="1"
                VerticalAlignment="Center">
      <TextBlock FontSize="14"
                 HorizontalAlignment="Center"
                 Text="Version">
      </TextBlock>
      <TextBlock FontSize="14"
                 HorizontalAlignment="Center"
                 Text="{Binding ProgramVersion}">
      </TextBlock>
    </StackPanel>
    <!-- End of Bottom Left Panel -->

    <!-- Start of Bottom Right Panel -->
    <Grid Grid.Column="1"
          Grid.Row="1"
          ColumnDefinitions="*, Auto">
      <Border Background="#2E2E2E"
        BorderBrush="#696969"
        BorderThickness="1"
        Margin="0, 15, 15, 15"
        Grid.Column="0">
        <TextBlock FontSize="40"
                   Height="50"
                   VerticalAlignment="Center"
                   Padding="15, 0, 0, 0"
                   Foreground="#A8A8A8"
                   Text="{Binding LastConsoleLine}">
        </TextBlock>
      </Border>
      <!-- Start of Info Button -->
      <!-- <Border Background="#2E2E2E"
              BorderBrush="#696969"
              BorderThickness="1"
              Margin="10, 15, 15, 15"
              Grid.Column="1">
        <Button Width="120"
                Height="40"
                Background="Transparent"
                Command="{Binding NavigateToInfo}">
          <TextBlock FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center">Update Mods</TextBlock>
        </Button>
      </Border> -->
